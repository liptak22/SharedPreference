<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.beataliptak.sharedpreference2.MainActivity">

    <TextView
        android:id="@+id/nev_beirasa"
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Enter your name!"
        />
    <EditText
        android:id="@+id/editt_name"
        android:layout_width="match_parent"
        android:layout_below="@+id/nev_beirasa"
        android:layout_height="wrap_content"
        android:hint="Ide írd be a neved"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/button_mentes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editt_name"
        android:text="Mentés"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>
